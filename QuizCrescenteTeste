			Thread.sleep(500);
			System.out.println("C) Mickey Mouse");
			Thread.sleep(500);
			System.out.println("D) Pluto");
			Thread.sleep(500);
			System.out.println("E) Tio Patinhas");
			Thread.sleep(500);
			System.out.println("...");
			qc.Resposta = sc.nextLine();
			if (qc.Resposta.equalsIgnoreCase("C")) {
				Thread.sleep(1000);
				System.out.println("Certa resposta!");
				Thread.sleep(1000);
				System.out.println("5");
				Thread.sleep(1000);
				System.out.println("4");
				Thread.sleep(1000);
				System.out.println("3");
				Thread.sleep(1000);
				System.out.println("2");
				Thread.sleep(1000);
				System.out.println("1");
				Thread.sleep(1000);
			} else {
				Thread.sleep(1000);
				System.out.println("Resposta incorreta... Tente novamente.");
				System.exit(0);
			}
			qc.Resposta = "";
			System.out.println("Qual a cor do céu quando está de noite?");
			Thread.sleep(1000);
			System.out.println("A) Amarelo");
			Thread.sleep(500);
			System.out.println("B) Verde");
