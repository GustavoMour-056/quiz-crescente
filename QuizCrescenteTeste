		System.out.println("Você deve responder apenas com 'A,B,C,D ou E'. ");
		Thread.sleep(2000);
		System.out.println("Preparado?");
		Thread.sleep(1000);
		System.out.println("A) Sim");
		Thread.sleep(500);
		System.out.println("B) Não");
		Thread.sleep(500);
		System.out.println("...");
		qc.Resposta = sc.nextLine();
		if (qc.Resposta.equalsIgnoreCase("B")) {
			System.out.println("Tudo bem... Volte quando estiver preparado.");
			System.exit(0);
		} else {
			qc.Resposta = "";
			Thread.sleep(3000);
