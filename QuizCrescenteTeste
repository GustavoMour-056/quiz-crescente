			if (qc.Resposta.equalsIgnoreCase("D")) {
				Thread.sleep(1000);
				System.out.println("Certa resposta!");
				Thread.sleep(1000);
				System.out.println("5");
				Thread.sleep(1000);
				System.out.println("4");
				Thread.sleep(1000);
				System.out.println("3");
				Thread.sleep(1000);
				System.out.println("2");
				Thread.sleep(1000);
				System.out.println("1");
				Thread.sleep(1000);
